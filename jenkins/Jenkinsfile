podTemplate(cloud: 'kubernetes',
        containers: [
                containerTemplate(
                        name:   'node14',
                        image:  'node:14.15.4',
                        command: 'cat',
                        ttyEnabled: true,
                        workingDir: env.WORKSPACE,
                        runAsUser: '0',
                        runAsGroup: '0'
                )
        ]) {
    node(POD_LABEL){
        environment {

            CI = 'true'
        }

        stage('Checkout scm') {
            echo "Checking out scm..."
            checkout(scm)
            echo "Current dir: ${PWD}"
            echo "Workspace: " + env.WORKSPACE
        }

        stage('Build'){
            container('node14') {
                sh 'npm ci'
                sh "chmod +x -R ${env.WORKSPACE}"
            }
        }

        stage('Test') {
            container('node14') {
                try {
//                    sh "./jenkins/scripts/start.sh"
                    sh "./jenkins/scripts/test.sh"
                }catch(e){
                    throw e
                } finally {
                    sh "./jenkins/scripts/kill.sh"
                }
            }
        }
    }
}